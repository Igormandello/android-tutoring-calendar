<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.unicamp.cotuca.tutoring_calendar_client.TutorSelected">

    <TextView
        android:id="@+id/txtTutorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="[nome-monitor]"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/lvSchedules"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Cronograma vazio. Contate os desenvolvedores ou verifique a Internet."
        android:textSize="20sp"
        android:visibility="gone"></TextView>
</LinearLayout>
